{
    "name": "cra-tsx",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build": "npm run build:server && npm run build:app",
        "build:app": "node config/scripts/app/build.js",
        "build:server": "webpack --mode=production --config config/webpack/webpack.config.server.js",
        "start": "concurrently \"npm run start:app\" \"npm run start:server\" ",
        "start:ssr": "npm run build:app && npm run start:server",
        "start:app": "node config/scripts/app/start.js",
        "start:server": "webpack --mode=development  --config config/webpack/webpack.config.server.js --watch",
        "test": "npm run test:unit && npm run test:int",
        "test:unit": "jest src --env=jsdom",
        "test:int": "jest __tests__",
        "db:up": "sh config/scripts/db/setup-db.sh",
        "env:sync": "sh config/scripts/env/sync-env-template.sh"
    },
    "dependencies": {
        "@koa/cors": "^2.2.2",
        "axios": "^0.18.0",
        "dotenv": "6.0.0",
        "dotenv-expand": "4.2.0",
        "koa": "^2.5.0",
        "koa-body": "^2.5.0",
        "koa-bodyparser": "^4.2.1",
        "koa-compress": "^3.0.0",
        "koa-helmet": "^4.0.0",
        "koa-logger": "^3.2.0",
        "koa-respond": "^2.1.0",
        "koa-router": "^7.4.0",
        "koa-static-server": "^1.3.4",
        "react": "^16.6.0",
        "react-dom": "^16.6.0",
        "react-helmet": "^5.2.0",
        "react-redux": "^5.0.7",
        "react-router-dom": "^4.3.1",
        "redux": "^4.0.1",
        "redux-thunk": "^2.3.0",
        "styled-components": "^4.0.2",
        "winston": "^3.1.0"
    },
    "devDependencies": {
        "@babel/core": "7.1.0",
        "@svgr/webpack": "2.4.1",
        "@types/dotenv": "^4.0.3",
        "@types/enzyme": "^3.1.14",
        "@types/jest": "^23.3.9",
        "@types/koa": "^2.0.44",
        "@types/koa-bodyparser": "^5.0.1",
        "@types/koa-compress": "^2.0.8",
        "@types/koa-helmet": "^3.1.2",
        "@types/koa-logger": "^3.1.1",
        "@types/koa-router": "^7.0.27",
        "@types/koa-static-server": "^1.3.0",
        "@types/koa__cors": "^2.2.3",
        "@types/node": "^10.12.1",
        "@types/react": "^16.4.18",
        "@types/react-dom": "^16.0.9",
        "@types/react-helmet": "^5.0.7",
        "@types/react-redux": "^6.0.9",
        "@types/react-router-dom": "^4.3.1",
        "@types/styled-components": "^4.0.1",
        "@types/supertest": "^2.0.2",
        "babel-core": "7.0.0-bridge.0",
        "babel-eslint": "9.0.0",
        "babel-jest": "23.6.0",
        "babel-loader": "8.0.4",
        "babel-plugin-named-asset-import": "^0.2.2",
        "babel-preset-react-app": "^6.0.0",
        "bfj": "6.1.1",
        "case-sensitive-paths-webpack-plugin": "2.1.2",
        "chalk": "2.4.1",
        "concurrently": "^4.0.1",
        "css-loader": "1.0.0",
        "enzyme": "^3.7.0",
        "enzyme-adapter-react-16": "^1.6.0",
        "eslint": "5.6.0",
        "eslint-config-react-app": "^3.0.5",
        "eslint-loader": "2.1.1",
        "eslint-plugin-flowtype": "2.50.1",
        "eslint-plugin-import": "2.14.0",
        "eslint-plugin-jsx-a11y": "6.1.2",
        "eslint-plugin-react": "7.11.1",
        "file-loader": "2.0.0",
        "fork-ts-checker-webpack-plugin-alt": "0.4.14",
        "fs-extra": "7.0.0",
        "html-webpack-plugin": "4.0.0-alpha.2",
        "identity-obj-proxy": "3.0.0",
        "jest": "23.6.0",
        "jest-pnp-resolver": "1.0.1",
        "jest-resolve": "23.6.0",
        "mini-css-extract-plugin": "0.4.3",
        "nodemon-webpack-plugin": "^3.0.1",
        "optimize-css-assets-webpack-plugin": "5.0.1",
        "pnp-webpack-plugin": "1.1.0",
        "postcss-flexbugs-fixes": "4.1.0",
        "postcss-loader": "3.0.0",
        "postcss-preset-env": "6.0.6",
        "postcss-safe-parser": "4.0.1",
        "react-app-polyfill": "^0.1.3",
        "react-dev-utils": "^6.1.0",
        "resolve": "1.8.1",
        "sass-loader": "7.1.0",
        "style-loader": "0.23.0",
        "terser-webpack-plugin": "1.1.0",
        "ts-jest": "^23.10.4",
        "ts-loader": "^5.3.0",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "typescript": "^3.1.4",
        "url-loader": "1.1.1",
        "webpack": "4.19.1",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "3.1.9",
        "webpack-manifest-plugin": "2.0.4",
        "workbox-webpack-plugin": "3.6.3"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}",
            "!src/**/*.d.ts"
        ],
        "resolver": "jest-pnp-resolver",
        "setupFiles": [
            "react-app-polyfill/jsdom",
            "<rootDir>/config/jest/setupEnzyme.js"
        ],
        "testMatch": [
            "<rootDir>/__tests__/**/*.(j|t)s?(x)",
            "<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
        ],
        "testEnvironment": "jsdom",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx|ts|tsx|mjs)$": "<rootDir>/node_modules/babel-jest",
            "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$",
            "^.+\\.module\\.(css|sass|scss)$"
        ],
        "moduleNameMapper": {
            "^react-native$": "react-native-web",
            "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
        },
        "moduleDirectories": [
            "node_modules",
            "src"
        ],
        "moduleFileExtensions": [
            "web.js",
            "js",
            "web.ts",
            "ts",
            "web.tsx",
            "tsx",
            "json",
            "web.jsx",
            "jsx",
            "node"
        ]
    },
    "globals": {
        "ts-jest": {
            "tsConfigFile": "tsconfig"
        }
    },
    "babel": {
        "presets": [
            "react-app"
        ]
    }
}
